// EXI stands for EXchange Interface.
// This file defines the EXI macro needed on MSDev (Microsoft) to define
// exports and imports from a DLL.
//
///////////////////////////////////////////////////////////////////////////////
*/
#pragma once

#define EXI

#ifdef _MSC_VER
#  ifdef LISLE_BUILD_SHARED
#    undef EXI
#    define EXI __declspec(dllexport)
#  endif
#endif
