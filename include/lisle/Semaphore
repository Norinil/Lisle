#pragma once
#include <lisle/Mutex>
#include <lisle/exceptions>
#include <lisle/EXI>
#include <cstdint>

#ifdef _MSC_VER
#pragma warning (push,2)
#undef max
#endif

namespace lisle { struct thread; }

namespace lisle {
class Semaphore
{
public:
	EXI ~Semaphore () throw (permission);
	EXI Semaphore (size_t value = 0) throw (resource);
	EXI static size_t max () throw ();
	EXI size_t value () const throw ();
	EXI bool trywait () throw ();
	EXI void wait () throw (thrcancel);
	EXI void post () throw (overflow);
private:
	struct data
	{
		size_t value;
		thread* waiting; // Linked list of waiting threads
		Mutex guard;
		data (size_t init = 0) : value(init), waiting(0), guard() {}
	} sem;
	Semaphore (const Semaphore&);
	Semaphore& operator = (const Semaphore&);
};
}

#ifdef _MSC_VER
#pragma warning (pop)
#endif
