#pragma once
#include <lisle/Thread>
#include <lisle/Duration>
#include <lisle/Handle>
#include <lisle/Anondle>
#include <lisle/EXI>
#include <lisle/sys/Local>
#include <lisle/sys/Thread>
#include <exception>

namespace lisle { void exit (const lisle::Anondle& hretd); }

/// Functions that can be called in the running thread.
namespace lisle {
struct cancel { enum State { disable, enable }; };
EXI void suspend ();
EXI void yield ();
EXI void sleep (const Duration& duration);
EXI void exit ();
EXI template <typename TRT> void exit (const Handle<TRT>& hretd) { lisle::exit(hretd); }
EXI void set (const cancel::State& cancelability);
EXI void get (cancel::State& cancelability);
EXI void testcancel ();
}

/// Lisle internal thread structure.
namespace lisle {
struct thread : public sys::Thread
{
	enum state { initial, suspended, running, canceling, terminal, exceptioned, canceled, terminated, joined } state; // thread state
	struct detach
	{
		enum State { joinable, detached } state; // thread detach state
		detach () : state(joinable) {}
	} detach;
	struct cancel
	{
		enum state { disable, enable } state;
		struct waiting
		{
			thread* queue;
			lisle::Mutex* guard;
			waiting () : queue(0), guard(0) {}
		} waiting;
		bool pending;
		thread* joining;
		cancel () : state(enable), pending(false), joining(0) {}
	} cancel;
	struct next
	{
		thread* queue; // link to next thread in queue (waiting)
		thread* list; // link to next thread in list (owners)
		next () : queue(0), list(0) {}
	} next;
	thread* joiner;
	lisle::Anondle hretd;
	int priority;
	thread () : state(initial), joiner(0) {}
	void yield ();
	void suspend ();
	void resume ();
	void waitrestart ();
	void waitrestartcancel (thread* waiting, lisle::Mutex& device);
	void waitrestartcancel (const Duration& duration, thread* waiting, lisle::Mutex& device);
	void restart ();
	void testcancel ();
	void waitjoiner ();
	void waitjoiningcancel (thread* thread);
private:
	typedef sys::Thread base;
	void waitrestart (const Duration& duration);
};
}

/// Lisle internal thread-handle.
namespace lisle {
typedef Handle<thread> threadle;
}

/// Lisle internal self. A thread-handle that represents the running thread.
namespace lisle {
class Self
{
public:
	~Self ();
	Self ();
	operator threadle () const;
	void create (const threadle& handle);
	void destroy ();
private:
	sys::Local key;
	Self (const Self&);
	Self& operator = (const Self&);
};
extern class Self self;
}
