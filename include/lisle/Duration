#pragma once
#include <lisle/EXI>
#include <cstdint>

namespace lisle {
class Duration
{
public:
	~Duration () {}
	Duration () {}
	Duration (const Duration& that) : data(that.data) {}
	Duration& operator = (const Duration& that) { this->data = that.data; return *this; }
	EXI Duration (double seconds);
	int64_t sec () const { return data.sec; }
	uint32_t nsec () const { return data.nsec; }
	EXI Duration operator - () const;
	EXI bool operator == (const Duration& that) const;
	EXI bool operator != (const Duration& that) const;
	EXI bool operator < (const Duration& that) const;
	EXI bool operator > (const Duration& that) const;
	bool operator <= (const Duration& that) const { return !(*this > that); }
	bool operator >= (const Duration& that) const { return !(*this < that); }
	EXI Duration& operator += (const Duration& that);
	EXI Duration& operator -= (const Duration& that);
private:
	struct Data
	{
		int64_t sec;
		uint32_t nsec;
		Data () : sec(0), nsec(0) {}
		Data (const Data& that) : sec(that.sec), nsec(that.nsec) {}
	} data;
};
}

EXI lisle::Duration operator + (const lisle::Duration& lho, const lisle::Duration& rho);
EXI lisle::Duration operator - (const lisle::Duration& lho, const lisle::Duration& rho);
