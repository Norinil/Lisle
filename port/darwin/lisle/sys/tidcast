// Darwin implementation of casting thread to numeric thread identifier.
// This is our best guess about numeric thread id on MacOS-X (aka darwin).
// If someone knows better contact a Lisle developer.
//
///////////////////////////////////////////////////////////////////////////////


#ifndef __LISLE_DARWIN_THREAD_ID_CAST__
#define __LISLE_DARWIN_THREAD_ID_CAST__


#include <lisle/sys/interface>
#include <lyric/Types>


namespace _lisle_ {
namespace sys {

//===========================================================================//
inline uint32 nid (pthread_t thread)
{
	return *(uint32*)&thread->opaque[44];
}
//---------------------------------------------------------------------------//

} // namespace sys
} // namespace _lisle_


#endif // __LISLE_DARWIN_THREAD_ID_CAST__
