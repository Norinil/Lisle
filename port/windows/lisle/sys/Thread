#pragma once
#include <windows.h>
#include <lisle/Mutex>
#include <lisle/EXI>
#include <cstdint>

namespace lisle {
namespace sys {
struct Thread
{
	HANDLE handle; // Thread
	DWORD nid; // Numeric ID
	struct restart
	{
		HANDLE event;
	} restart;
	lisle::Mutex guard;
	EXI ~Thread ();
	EXI Thread ();
	EXI uint32_t id () const;
	EXI bool equal (const Thread& thread) const;
	EXI bool equal (const Thread* thread) const;
};
}
}
